<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jhorje18.quicktrade">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/carrito"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/carrito"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EditarUser"
            android:label="@string/edit_profile"
            android:parentActivityName=".Perfil" />
        <activity
            android:name=".Estadisticas"
            android:label="@string/estadisticas"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Login"
            android:label="@string/txtLogin" />
        <activity
            android:name=".Registro"
            android:label="@string/txtRegistrarse" />
        <activity
            android:name=".Perfil"
            android:label="@string/txtProfile"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Confirmar"
            android:label="@string/txtConfirm_for" />
        <activity
            android:name=".ProductoView"
            android:label="@string/txtProducto" />
        <activity
            android:name=".NuevoProducto"
            android:label="@string/add_product" />
        <activity
            android:name=".EditarProducto"
            android:label="@string/edit_product" />
        <activity android:name=".BusquedaArticulos" />
    </application>

</manifest>