<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="?attr/colorButtonNormal"
    android:orientation="horizontal"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/colorBackgroundFloating"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tctListProductNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:singleLine="true"
            android:text="Nombre articulo"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tctListProductCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:padding="5dp"
            android:singleLine="true"
            android:text="#CATEGORIA"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tctListProductDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Descripción de unas cuantas palabras, pero no muchas que sino me cabreo jajajajajja" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="?android:attr/colorBackground"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/colorBackground"
            android:backgroundTint="?android:attr/colorBackground"
            android:backgroundTintMode="src_over" />

        <TextView
            android:id="@+id/tctListProductPrecio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/colorBackground"
            android:singleLine="true"
            android:text="2.555€"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tctListProductUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/actionModeBackground"
            android:padding="5dp"
            android:singleLine="true"
            android:text="@USUARIO"
            android:textAlignment="textStart"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>